<%- include("partials/header.ejs") %>

<div
  class="container min-vh-100 d-flex flex-column align-items-center justify-content-start py-4"
>
  <h2 class="text-center mb-4">What Others Think</h2>

  <% if (reviews.length === 0) { %>
  <p class="text-muted">No reviews yet. Be the first to share your thoughts!</p>
  <% } else { %> <% reviews.forEach(review => { %>
  <div class="card w-75 mb-3 shadow-sm">
    <div class="card-body">
      <p class="card-text"> <h4><%= review.title %></h4> </p>
      <p class="card-text"><%= review.content %></p>
      <small class="text-muted"
        >Posted on <%= review.date %> by <%= review.author %></small
      >
    </div>
  </div>
  <% }) %> <% } %>
</div>

<%- include("partials/footer.ejs") %>
