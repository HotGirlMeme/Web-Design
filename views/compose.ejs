<%- include("partials/header.ejs") %>

<div
  class="container-fluid py-5 bg-body-tertiary min-vh-100 d-flex align-items-center justify-content-center"
>
  <div class="col-lg-8 col-md-10 col-sm-12 bg-white shadow-sm p-5 rounded-4">
    <h1 class="display-5 fw-bold mb-4 text-center">Write a Book Review</h1>
    <p class="text-muted text-center mb-5">
      Share your thoughts on a recent read. Whether it moved you, bored you, or
      left you confusedâ€”we want to know!
    </p>

    <form action="/compose" method="POST">
      <div class="mb-3">
        <label for="nameInput" class="form-label">Your Name</label>
        <input
          type="text"
          class="form-control"
          id="nameInput"
          name="author"
          placeholder="e.g., Mmesoma"
        />
      </div>

      <div class="mb-3">
        <label for="titleInput" class="form-label">Book Title</label>
        <input
          type="text"
          class="form-control"
          id="titleInput"
          name="title"
          placeholder="e.g., The Midnight Library"
        />
      </div>

      <div class="mb-4">
        <label for="postInput" class="form-label">Your Review</label>
        <textarea
          class="form-control"
          id="postInput"
          name="content"
          rows="6"
          placeholder="Write your review here..."
        ></textarea>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-dark btn-lg rounded-pill">
          Publish
        </button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
